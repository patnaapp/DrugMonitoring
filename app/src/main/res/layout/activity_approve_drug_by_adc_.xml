<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ApproveDrugByAdc_Activity">

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header_main"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/header"
        android:layout_above="@+id/ll_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <RelativeLayout
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_adapter_cell">

                    <LinearLayout
                        android:id="@+id/ll_username"
                        android:layout_below="@+id/ll_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospital Name"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_hosp_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEST"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_dist_role"
                        android:layout_below="@+id/ll_username"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_district"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hospital Address"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_hosp_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ICMR ID"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="visible"
                            android:layout_weight="1"
                            android:id="@+id/ll_thela_datail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nodal Officer Name"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_nodal_off_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_div_zone"
                        android:layout_below="@+id/ll_dist_role"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact No."
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_cntct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TEST"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:id="@+id/ll_zone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_patientage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="test"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_div_zone1"
                        android:layout_below="@+id/ll_div_zone"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_phone1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Govt./Private"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_govt_pvt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TEST"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_zone1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Beds"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_beds"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="test"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_below="@+id/ll_div_zone1"
                        android:id="@+id/ll_criticality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Critical Status"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_critical_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="status"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="List of Distributors attached to this hospital for the issuance of medicine"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="4dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/rv_distributors"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:id="@+id/rl_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <RelativeLayout
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape11">
                    <LinearLayout
                        android:id="@+id/ll_tvdrug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="List of Pending requests for approval"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tv_drug"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_drug"
                        android:layout_below="@+id/ll_tvdrug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="S.No"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_slno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1."
                            android:textColor="@android:color/black"
                            android:textSize="15sp"/>
                    </LinearLayout>





                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_dist_role_drug"
                        android:layout_below="@+id/ll_drug"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_drugname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Request Date"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_requst_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="visible"
                            android:layout_weight="1"
                            android:id="@+id/ll_max_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="	Drug Name"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_drugname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_drug_qty"
                        android:layout_below="@+id/ll_dist_role_drug"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_req_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Requested Qty"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_req_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NA"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:visibility="visible"
                            android:layout_weight="1"
                            android:id="@+id/ll_approved_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Already Approved Qty"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_already_approve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_div_zone_drug"
                        android:layout_below="@+id/ll_drug_qty"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <LinearLayout
                            android:visibility="visible"
                            android:layout_weight="1"
                            android:id="@+id/ll_pending_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qty Pending For Approval"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_pending_approve_qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6"
                                android:textColor="@android:color/black"
                                android:textSize="15sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:id="@+id/ll_qty_request"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qty to be approved"
                                android:textColor="@color/colorGreyDark"
                                android:textSize="12sp"/>

                            <EditText

                                android:id="@+id/edt_qty_tobe_approved"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textboxshape"
                                android:hint="Qty to be approved"
                                android:inputType="number"
                                android:singleLine="true"
                                android:maxLength="1"
                                android:textColor="#222222"
                                android:focusableInTouchMode="true"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="List of Distributors attached to this hospital for the issuance of medicine"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/rv_issued_medicines"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_bottom"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/ll_btn_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_above="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:text="    Approve "
                android:textColor="#ffff"
                android:textSize="17sp"
                android:onClick="on_Approve"/>


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>